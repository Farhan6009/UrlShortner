<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <h1>URL shortner</h1>
      <form action="/shortUrl" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Full Url</label>
        <input
          required="true"
          type="url"
          name="fullUrl"
          id="fullUrl"
          placeholder="Url"
          class="form-control"
        />
        <button type="submit" class="btn btn-success">Shrink</button>
      </form>
      <table class="table table-stripped">
        <thead>
          <tr>
            <th>Full Url</th>
            <th>Short Url</th>
            <th>Click</th>
          </tr>
        </thead>
        <tbody>
          {{#each shortUrl}}
            <tr>
              <td><a href={{full}}>{{full}}</a>
              </td>
              <td><a href={{short}}>{{short}}</a></td>
              <td>{{clicks}}</td>
            </tr>
          {{/each}}

        </tbody>
      </table>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"
      ></script>
    </div>
  </body>
</html>